<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=, initial-scale=1.0">
    <title>
        <%- title%> 
    </title>
    <link rel="stylesheet" href="/css/alerta.css">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="icon" type="image/png" href="/img/livro.png" sizes="16x16">
</head>

<body>
    <div id="alerta" class="alerta <%- msg%>">
        Operação bem sucedida!
    </div>

    <div class="container">
        <%- include("../partials/menu.ejs")%>
            <h1 style="text-align: center;">Listagem de alunos</h1>
            <hr>
            <a class="btn btn-success" href="/aluno/cadastrar/">Cadastrar</a>
            <br>
            <br>
            <% if (alunos.length > 0) { %>
                <% alunos.forEach(aluno => { %>

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"> <%= aluno.nome%> </h5>
                            <p class="card-text">
                                <b>Matricula: </b>
                                <%= aluno.matricula%>
                            </p>
                            <p class="card-text">
                                <b>Idade: </b>
                                <%= aluno.idade%>
                            </p>
                            <p class="card-text">
                                <b>Curso: </b>
                                <%= aluno.curso%>
                            </p>
                            <p class="card-text">
                                <b>E-mail: </b>
                                <%= aluno.email%>
                            </p>
        
                            <a class="btn btn-warning" href="/aluno/cadastrar/<%= aluno.id%>">Editar</a>
                            <a class="btn btn-danger" href="/aluno/remover/<%= aluno.id%>">Remover</a>
                        </div>
                    </div>

                    <% }) %>
            <% } else { %>
                Não há dados de alunos.
                <% } %>
    </div>
    <script src="/js/bootstrap.bundle.js"></script>

    <script type="text/javascript">
        setTimeout(() => {
            var alerta = document.getElementById("alerta");
            alerta.className = "alerta";
        }, 3000);
    </script>

</body>

</html>